<h1>Job Application</h1>

	
<p>Please enter your email address to receive the contanct information for this offer.</p>
<% form_for(@job_application, "/job_offers/apply/#{@job_offer.id}") do |f| %>

  <%= f.label :applicant_email %>
 	<%= f.text_field :applicant_email %>

  <%= f.label :applicant_curriculum %>
  <%= f.text_field :applicant_curriculum %>
  
  <%= f.label :expected_remuneration_min, :caption => "Expected min remuneration (ARS$):" %> 
  <%= f.text_field :expected_remuneration_min %>
  
  <%= f.label :expected_remuneration_max, :caption => "Expected max remuneration (ARS$):" %> 
  <%= f.text_field :expected_remuneration_max %>

  <%= f.label :bio %>
  <%= f.text_area :bio, :rows => 5, style: 'width:50%;' %>

  <hr/>
  <%= f.submit "Apply", :class => "btn btn-primary" %>
  <%= link_to 'Cancel', url_for(:job_offers, :latest), :class => "btn btn-secondary" %>
<% end %>